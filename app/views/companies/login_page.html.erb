<% provide(:title, 'All Companies') %>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">


<div class="main companies-index">
    <div class="container">
        <h1 class="companies-heading">企業一覧</h1>
        <table  class="table table-condensed table-striped table-hover item-table">
        <% @companies.each do |company| %>
            <tr>
            <div class="companies-index-item">
             <div class="companies-right">
              <td><%= link_to company.name, company_path(company.id) %></td>
             </div>
            </div>
            </tr>
        <% end %>
        </table>
    </div>
</div>
