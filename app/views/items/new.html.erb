<% provide(:title, "Sign Up") %>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">



<div class="row">
    <div class="col-md-6 col-md-offset-3 container">
        <h1>商品登録</h1>
        <%= form_with(model: @item, local: true) do |f| %>
            <%= render 'shared/error_messages' %>
            
            <%= f.label :item, class: "label--edit" %>
            <%= f.text_area :item , class: "form-control" %>
            
            <%= f.label :price, class: "label--edit" %>
            <%= f.number_field :price, class: "form-control" %>
            
            <%= f.label :note, class: "label--edit" %>
            <%= f.text_area :note, class: "form-control" %>
            
            <%= f.label :image, class: "label--edit" %>
            <%= f.file_field :image, class: "form-control" %>
            
            <%= f.submit "新規登録", class: "btn btn-primary btn-block btn-signup" %>
        <% end %>
    </div>
</div>